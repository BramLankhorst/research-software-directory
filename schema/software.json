{
  "_id": "software",
  "required": [
    "name",
    "id",
    "schema"
  ],
  "id": "software",
  "type": "object",
  "#schema": "http://json-schema.org/draft-04/schema#",
  "properties": {
    "createdAt": {
      "description": "Timestamp resource was created at",
      "type": "integer",
      "minimum": 0
    },
    "updatedAt": {
      "description": "Timestamp resource was last updated at",
      "type": "integer",
      "minimum": 0
    },
    "publications": {
      "items": {
        "type": "string",
        "resType": "publication"
      },
      "type": "array",
      "description": "Publications based on software"
    },
    "id": {
      "format": "uri",
      "description": "ID of the software.",
      "type": "string"
    },
    "schema": {
      "description": "Fixed property, to validate the JSON object with the current schema.",
      "type": "string",
      "enum": [
        "software"
      ]
    },
    "name": {
      "description": "Human-readable name",
      "type": "string"
    },
    "githubid": {
      "description": "Github ID (eg. NLeSC/repository)",
      "type": "string",
      "sortIndex": 10
    },
    "doi": {
      "type": "string",
      "description": "Main DOI (e.g. 10.5281/zenodo.35415)."
    },
    "tagLine": {
      "description": "One-sentence description of the software.",
      "type": "string"
    },
    "statement": {
      "description": "Software statement.",
      "type": "string"
    },
    "website": {
      "format": "uri",
      "description": "Link to the main website.",
      "type": "string"
    },
    "contactPerson": {
      "anyOf": [
        {
          "reference": "person"
        },
        {
          "type": "string",
          "description": "ID of the person. This is preferably an URI where the person's metadata can be resolved, e.g., s.verhoeven.",
          "resType": "person"
        }
      ],
      "description": "Contact person of the project."
    },
    "description": {
      "description": "Full description of the software, in Markdown format",
      "type": "string"
    },
    "usingOrganization": {
      "type": "array",
      "description": "Entities that use the software.",
      "items": {
        "anyOf": [
          {
            "reference": "organization"
          },
          {
            "description": "ID of the organization. This is preferably an URI where the organization's metadata can be resolved, e.g., s.verhoeven.",
            "type": "string",
            "resType": "organization"
          }
        ]
      }
    },
    "technologyTag": {
      "items": {
        "type": "string",
        "description": "e.g. Simulation, Modeling, MultiModel, ImageClassification, NER, NeuralNetworks, etc."
      },
      "type": "array",
      "description": "Keywords of related or relevant technologies."
    },
    "owner": {
      "description": "Entity that is the copyright holder of the software (usually NLeSC and project partners).",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "reference": "organization"
          },
          {
            "format": "uri",
            "description": "ID of the organization. e.g., nlesc.",
            "type": "string",
            "resType": "organization"
          }
        ]
      }
    },
    "status": {
      "enum": [
        "concept",
        "wip",
        "suspended",
        "abandoned",
        "active",
        "inactive",
        "unsupported"
      ],
      "type": "string",
      "description": "Development status, see http://www.repostatus.org"
    },
    "competence": {
      "type": "array",
      "description": "NLeSC core competences associated to the software.",
      "items": {
        "enum": [
          "Big Data Analytics",
          "Efficient Computing",
          "Optimized Data Handling"
        ],
        "type": "string"
      }
    },
    "tags": {
      "type": "array",
      "description": "Tags associated with software.",
      "items": {
        "enum": [
          "Visualization",
          "Image processing",
          "Machine learning",
          "Text analysis & natural language processing",
          "Real time data analysis",
          "Optimized data handling",
          "Big data",
          "Inter-operability & linked data",
          "Multi-scale & multi model simulations",
          "High performance computing",
          "GPU",
          "Workflow technologies"
        ],
        "type": "string"
      }
    },
    "highlighted": {
      "type": "boolean",
      "description": "Highlighted on software site."
    },
    "published": {
      "type": "boolean",
      "description": "Published on RSD site."
    },
    "contributor": {
      "items": {
        "anyOf": [
          {
            "reference": "person"
          },
          {
            "type": "string",
            "description": "ID of the person. This is preferably an URI where the person's metadata can be resolved, e.g., s.verhoeven.",
            "format": "uri",
            "resType": "person"
          }
        ]
      },
      "description": "Contributor to the software",
      "type": "array"
    },
    "expertise": {
      "description": "NLeSC expertises associated to the project.",
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "Accelerated Computing",
          "Computer Vision",
          "Data Assimilation",
          "Databases",
          "Distributed Computing",
          "Handling Sensor Data",
          "High Performance Computing",
          "Info",
          "Information Integration",
          "Information Retrieval",
          "Information Visualization",
          "Linked Data",
          "Low Power Computing",
          "Machine Learning",
          "Orchestrated Computing",
          "Reproducible Research",
          "Scientific Visualization",
          "Statistical Inference",
          "Text Mining"
        ]
      }
    },
    "downloadUrl": {
      "format": "uri",
      "description": "Link to download page (e.g. Github releases, PyPi, npm, jcenter).",
      "type": "string"
    },
    "license": {
      "type": "array",
      "description": "Software license.",
      "items": {
        "description": "e.g. apache-2.0, gpl-3.0, etc. See https://developer.github.com/v3/licenses/",
        "type": "string"
      }
    },
    "dependsOn": {
      "type": "array",
      "description": "Other software that this software depends on",
      "items": {
        "format": "uri",
        "description": "ID of the software",
        "type": "string",
        "resType": "software"
      }
    },
    "discipline": {
      "type": "array",
      "description": "NLeSC disciplines associated to the software.",
      "items": {
        "type": "string",
        "enum": [
          "Physics & Beyond",
          "Environment & Sustainability",
          "Life Sciences & eHealth",
          "Humanities & Social Sciences",
          "eScience Methodology"
        ]
      }
    },
    "codeRepository": {
      "type": "string",
      "description": "Link to the repository where the un-compiled, human readable code and related code is located (github, SVN, CodePlex).",
      "format": "uri"
    },
    "usedInProject": {
      "description": "Projects the software is used in.",
      "type": "array",
      "items": {
        "format": "uri",
        "description": "ID of the project. e.g., emetabolomics.",
        "type": "string",
        "resType": "project"
      }
    },
    "outputOfProject": {
      "description": "Projects the software is output of.",
      "type": "array",
      "items": {
        "anyOf": [
          {
            "reference": "project"
          },
          {
            "format": "uri",
            "description": "ID of the project. e.g., emetabolomics.",
            "type": "string",
            "resType": "project"
          }
        ]
      }
    },
    "startDate": {
      "description": "Start date of development.",
      "type": "string",
      "format": "date"
    },
    "involvedOrganization": {
      "type": "array",
      "description": "Organizations that have been developing this software or have a large stake in the software.",
      "items": {
        "anyOf": [
          {
            "reference": "organization"
          },
          {
            "type": "string",
            "description": "ID of the organization",
            "resType": "organization"
          }
        ]
      }
    },
    "contributingOrganization": {
      "items": {
        "type": "string",
        "description": "ID of the organization",
        "resType": "organization"
      },
      "type": "array",
      "description": "Organizations that have contributed to this entry, e.g. software made by, or contributed to (either financially or otherwise) by this organisation; Used for grouping items on the website per organization."
    },
    "programmingLanguage": {
      "type": "array",
      "description": "Programming languages used in the software or supported by the software.",
      "items": {
        "description": "e.g. C, C++, Java, Python, R, JavaScript, PHP, TypeScript, etc. See https://github.com/github/linguist",
        "type": "string",
        "enum": [
          "C",
          "C++",
          "Fortran",
          "Java",
          "Python",
          "YAML",
          "Perl",
          "JavaScript",
          "TypeScript",
          "R",
          "MATLAB",
          "FORTRAN",
          "CUDA",
          "HTML",
          "Cython",
          "Ruby",
          "C#",
          "OpenCL",
          "Erlang",
          "Go",
          "Haskell",
          "Lisp",
          "PHP"
        ]
      }
    },
    "documentationUrl": {
      "type": "string",
      "description": "Link to the documentation pages.",
      "format": "uri"
    },
    "supportLevel": {
      "type": "string",
      "description": "Level of support that NLeSC can provide under eStep.",
      "enum": [
        "none",
        "basic",
        "advanced",
        "specialized"
      ]
    },
    "nlescWebsite": {
      "type": "string",
      "description": "Link to the associated page on the NLeSC website (e.g. https://www.esciencecenter.nl/technology/software/xenon).",
      "format": "uri"
    },
    "zoteroKey": {
      "description": "Zotero key of the software",
      "type": "string"
    },
    "releases": {
      "description": "Releases of the software (versioning)",
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "doi": {
            "description": "DOI",
            "type": "string"
          },
          "version": {
            "description": "version number",
            "type": "string"
          },
          "date": {
            "description": "release date",
            "type": "string",
            "format": "date"
          }
        }
      }
    },
    "relatedSoftware": {
      "description": "related software.",
      "type": "array",
      "items": {
        "format": "uri",
        "description": "ID of the software. e.g., emetabolomics.",
        "type": "string",
        "resType": "software"
      }
    },
    "testimonial": {
      "type": "string",
      "description": "Testimonial / recommendation (e.g. 'Noodles, the best thing since sliced bread')"
    },
    "testimonialBy": {
      "type": "string",
      "description": "Testimonial written by (e.g. 'Stefan Verhoeven, Netherlands eScience Center')"
    }
  },
  "additionalProperties": false
}