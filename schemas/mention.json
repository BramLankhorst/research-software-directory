{
    "$schema": "http://json-schema.org/draft-04/schema",
    "additionalProperties": false,
    "title": "Mention schema",
    "required": [
        "createdAt",
        "primaryKey",
        "title",
        "type",
        "updatedAt",
        "zoteroKey"
    ],
    "properties": {
        "createdAt": {
            "type": "integer",
            "minimum": 0
        },
        "date": {
            "format": "date-time",
            "type": "string"
        },
        "primaryKey": {
            "$ref": "#/definitions/key/mention"
        },
        "title": {
            "type": "string"
        },
        "type": {
            "enum": [
                "blogPost",
                "book",
                "bookSection",
                "computerProgram",
                "conferencePaper",
                "journalArticle",
                "newspaperArticle",
                "presentation",
                "videoRecording",
                "webpage"
            ],
            "type": "string"
        },
        "updatedAt": {
            "type": "integer",
            "minimum": 0
        },
        "url": {
            "format": "uri",
            "type": "string"
        },
        "zoteroKey": {
            "type": "string"
        }
    },
    "definitions": {
        "key": {
            "commit": {
                "type": "object",
                "required": [
                    "collection",
                    "id"
                ],
                "additionalProperties": false,
                "properties": {
                    "collection": {
                        "enum": [
                            "commit"
                        ],
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    }
                }
            },
            "mention": {
                "type": "object",
                "required": [
                    "collection",
                    "id"
                ],
                "additionalProperties": false,
                "properties": {
                    "collection": {
                        "enum": [
                            "mention"
                        ],
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    }
                }
            },
            "person": {
                "type": "object",
                "required": [
                    "collection",
                    "id"
                ],
                "additionalProperties": false,
                "properties": {
                    "collection": {
                        "enum": [
                            "person"
                        ],
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    }
                }
            },
            "project": {
                "type": "object",
                "required": [
                    "collection",
                    "id"
                ],
                "additionalProperties": false,
                "properties": {
                    "collection": {
                        "enum": [
                            "project"
                        ],
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    }
                }
            },
            "organization": {
                "type": "object",
                "required": [
                    "collection",
                    "id"
                ],
                "additionalProperties": false,
                "properties": {
                    "collection": {
                        "enum": [
                            "organization"
                        ],
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    }
                }
            },
            "software": {
                "type": "object",
                "required": [
                    "collection",
                    "id"
                ],
                "additionalProperties": false,
                "properties": {
                    "collection": {
                        "enum": [
                            "software"
                        ],
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    }
                }
            }
        }
    }
}