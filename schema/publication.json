{
  "required": [
    "id",
    "schema",
    "description",
    "endorsedBy",
    "authors",
    "date"
  ],
  "additionalProperties": false,
  "description": "A publication (journal article, video, news item etc).",
  "type": "object",
  "#schema": "http://json-schema.org/draft-04/schema#",
  "id": "publication",
  "properties": {
    "createdAt": {
      "description": "Timestamp resource was created at",
      "type": "integer",
      "minimum": 0
    },
    "updatedAt": {
      "description": "Timestamp resource was last updated at",
      "type": "integer",
      "minimum": 0
    },
    "schema": {
      "enum": [
        "publication"
      ],
      "type": "string",
      "description": "Fixed property, to validate the JSON object with the current schema."
    },
    "date": {
      "format": "date-time",
      "description": "Date the item was issued/published. In Citation Style Language (CSL) it is the `issued` field.",
      "type": "string"
    },
    "id": {
      "type": "string",
      "description": "id of publication (Zotero key)"
    },
    "zotero_key": {
      "type": "string",
      "description": "zotero key of publication"
    },
    "title": {
      "type": "string",
      "description": "Title of publication"
    },
    "type": {
      "description": "Type of citation (Zotero type)",
      "type": "string"
    },
    "doi": {
      "format": "uri",
      "description": "Digital Object Identifiers (DOI) of publication",
      "type": "string"
    },
    "url": {
      "format": "uri",
      "description": "URL where publication can be found",
      "type": "string"
    },
    "authors": {
      "description": "IDs of people that are author of publication.",
      "type": "array",
      "items": {
        "type": "object",
        "description": "Author",
        "required": ["firstName", "lastName"],
        "additionalProperties": false,
        "properties": {
          "firstName": {
            "type" : "string",
            "description": "first name of author"
          },
          "lastName": {
            "type" : "string",
            "description": "last name of author"
          },
          "person": {
            "type": "string",
            "description": "ID of person that author maps to",
            "resType": "person"
          }
        }
      }
    }
  }
}
