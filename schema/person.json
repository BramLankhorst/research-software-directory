{
  "required": [
    "name",
    "id",
    "schema"
  ],
  "id": "person",
  "type": "object",
  "#schema": "http://json-schema.org/draft2-3/schema#",
  "properties": {
    "createdAt": {
      "description": "Timestamp resource was created at",
      "type": "integer",
      "minimum": 0
    },
    "updatedAt": {
      "description": "Timestamp resource was last updated at",
      "type": "integer",
      "minimum": 0
    },
    "name": {
      "description": "Full name of the person.",
      "type": "string"
    },
    "githubid": {
      "format": "uri",
      "type": "string",
      "description": "Person's github username (e.g. sverhoeven)."
    },
    "id": {
      "format": "uri",
      "description": "ID of the person. e.g., s.verhoeven.",
      "type": "string"
    },
    "researchgateUrl": {
      "format": "uri",
      "type": "string",
      "description": "Personal ResearchGate profile (e.g. https://www.researchgate.net/profile/Stefan_Verhoeven)."
    },
    "description": {
      "description": "Person description, bio and/or CV, in Markdown format",
      "type": "string"
    },
    "jobTitle": {
      "type": "string",
      "description": "The job title of the person (for example, eScience Research Engineer)."
    },
    "ORCID": {
      "format": "uri",
      "description": "Person's ORCID ID (e.g. http://orcid.org/0000-0002-4510-0385).",
      "type": "string"
    },
    "linkedInUrl": {
      "type": "string",
      "description": "Person's LinkedIn profile (e.g. https://www.linkedin.com/in/stefan-verhoeven-15381121).",
      "format": "uri"
    },
    "schema": {
      "description": "Fixed property, to validate the JSON object with the current schema.",
      "type": "string",
      "enum": [
        "person"
      ]
    },
    "twitterUrl": {
      "format": "uri",
      "description": "Person's Twitter profile",
      "type": "string"
    },
    "website": {
      "format": "uri",
      "type": "string",
      "description": "Link to the main website."
    },
    "email": {
      "description": "Email address of the person",
      "type": "string",
      "format": "email"
    },
    "organization": {
      "description": "Organization of the person",
      "type": "string"
    },
    "nlescWebsite": {
      "description": "Link to the associated page on the NLeSC website (e.g. https://www.esciencecenter.nl/profile/ing.-stefan-verhoeven).",
      "type": "string",
      "format": "uri"
    }
  },
  "additionalProperties": false
}