{
    "compilerOptions": {
        "outDir": "build/dist",
        "module": "es2015",
        "target": "es5",
        "lib": ["es6", "dom"],
        "sourceMap": true,
        "allowJs": true,
        "jsx": "react",
        "moduleResolution": "node",
        "baseUrl": ".",
        "typeRoots": ["node_modules/@types"],
        "rootDir": "src",
        "forceConsistentCasingInFileNames": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strict": true,
        "suppressImplicitAnyIndexErrors": true
//        "paths": {
//            "*": [
//                "*"
//            ]
//        }
    },
    "exclude": [
        "node_modules",
        "build",
        "coverage",
        "scripts",
        "acceptance-tests",
        "webpack",
        "jest",
        "src/setupTests.ts"
    ],
    "types": [
        "typePatches"
    ]
}
