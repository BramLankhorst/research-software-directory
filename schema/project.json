{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "properties": {
        "allOf": [
            {
                "$ref": "file:created-and-updated.jon"
            },
            {
                "principalInvestigator": {
                    "allOf": [
                        {
                            "$ref": "person.json"
                        },
                        {
                            "properties": {
                                "affiliations": {
                                    "items": {
                                        "type": "string"
                                    },
                                    "type": "array"
                                }
                            },
                            "type": "object"
                        }
                    ]
                },
                "image": {
                    "format": "uri",
                    "type": "string"
                },
                "subtitle": {
                    "type": "string"
                },
                "title": {
                    "type": "string"
                },
                "url": {
                    "format": "uri",
                    "type": "string"
                }
            }
        ]
    },
    "required": [
        "principalInvestigator",
        "image",
        "subtitle",
        "title",
        "url"
    ],
    "type": "object"
}
